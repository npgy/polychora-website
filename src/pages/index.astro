---
import "../styles/global.css";
import Section from "../components/Section.astro";
import Main from "../components/Main.astro";
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import fl from "../assets/fl.jpg";
import prot from "../assets/prot.jpg";
import rc from "../assets/davz.jpg";
---

<style>
  .services {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .service {
    background-color: var(--secondary);
    color: var(--background);
    padding: 2rem;
    text-align: center;
    transition: transform 0.3s ease;
  }

  .service:hover {
    transform: translateY(-10px);
  }

  .artists {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
  }

  .artist {
    background-color: var(--primary);
    color: var(--background);
    padding: 1rem;
    width: 200px;
    text-align: center;
    transform: rotate(-3deg);
    transition: transform 0.3s ease;
  }

  .artist:hover {
    transform: rotate(3deg);
  }

  .contact-form {
    max-width: 500px;
    margin: 0 auto;
  }

  .contact-form input,
  .contact-form textarea {
    width: 100%;
    padding: 1rem;
    margin-bottom: 1rem;
    border: 3px solid var(--secondary);
    border-radius: 11px;
    background-color: var(--background);
    color: var(--text);
    font-family: "Poppins-SemiBold", sans-serif;
    font-weight: 600;
  }

  .contact-form button {
    background-color: var(--accent);
    color: var(--background);
    border: none;
    padding: 1rem 2rem;
    font-size: 1.2rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .contact-form button:hover {
    background-color: var(--primary);
  }
</style>
<MainLayout>
  <Main>
    <Section id="latest-release">
      <h2>Latest Releases</h2>
      <div class="latest flex flex-row gap-8 flex-wrap justify-around">
        <a
          href="https://electronicvisions.bandcamp.com/album/forest-language-3"
          target="_blank"
          class="shrink-0"
        >
          <div class="flex flex-col gap-4 items-center">
            <Image
              width="400"
              height="400"
              class="w-56 h-56 rounded-xl"
              alt="fl"
              src={fl}
            />
            <div class="flex flex-col gap-1 items-center">
              <span class="text-2xl">Forest Language</span>
              <span class="text-xl">Electronic Visions</span>
            </div>
          </div>
        </a>
        <a
          href="https://polychorarecs.bandcamp.com/album/protocol"
          target="_blank"
          class="shrink-0"
        >
          <div class="flex flex-col gap-4 items-center">
            <Image
              width="400"
              height="400"
              class="w-56 h-56 rounded-xl"
              alt="fl"
              src={prot}
            />
            <div class="flex flex-col gap-1 items-center">
              <span class="text-2xl">Protocol</span>
              <span class="text-xl">Delimitr</span>
            </div>
          </div>
        </a>
        <a
          href="https://davz.bandcamp.com/album/radio-continental"
          target="_blank"
          class="shrink-0"
        >
          <div class="flex flex-col gap-4 items-center">
            <Image
              width="400"
              height="400"
              class="w-56 h-56 rounded-xl"
              alt="fl"
              src={rc}
            />
            <div class="flex flex-col gap-1 items-center">
              <span class="text-2xl">Radio Continental</span>
              <span class="text-xl">DavZ</span>
            </div>
          </div>
        </a>
      </div>
    </Section>

    <Section id="services">
      <h2>Our Services</h2>
      <div class="services">
        <div class="service">
          <h3>Record Label</h3>
          <p>
            We don't just sign artists, we adopt them into our weird and
            wonderful family.
          </p>
        </div>
        <div class="service">
          <h3>Fulfillment</h3>
          <p>
            We pack and ship with the precision of a drum machine and the care
            of a vinyl collector.
          </p>
        </div>
        <div class="service">
          <h3>Distribution</h3>
          <p>
            We'll get your music to places you didn't even know existed.
            Alternate dimensions included.
          </p>
        </div>
      </div>
    </Section>

    <Section id="artists">
      <h2>Our Artists</h2>
      <div class="artists">
        <div class="artist">
          <h3>Quantum Quokkas</h3>
          <p>Psychedelic Surf Rock</p>
        </div>
        <div class="artist">
          <h3>Neon Narwhals</h3>
          <p>Synthwave</p>
        </div>
        <div class="artist">
          <h3>Fractal Flamingos</h3>
          <p>Math Rock</p>
        </div>
        <div class="artist">
          <h3>Holographic Hedgehogs</h3>
          <p>Glitch Hop</p>
        </div>
      </div>
    </Section>

    <Section id="contact">
      <h2>Get in Touch</h2>
      <form class="contact-form">
        <input type="text" placeholder="Your Name" required />
        <input type="email" placeholder="Your Email" required />
        <textarea placeholder="Your Message" required></textarea>
        <button type="submit">Send It!</button>
      </form>
    </Section>
  </Main>
</MainLayout>
